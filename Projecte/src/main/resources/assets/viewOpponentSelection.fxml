<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchor" minHeight="500.0" minWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clientFX.CtrlOpponentSelection"
            style="-fx-background-color: linear-gradient(to bottom, #f2d16b, #d3a243);">
   <children>
      <VBox alignment="CENTER" spacing="25" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
            style="-fx-background-color: rgba(255,255,255,0.3); -fx-background-radius: 20; -fx-padding: 40;">
         <children>
            <Label text="Selecciona un oponente" alignment="CENTER" textFill="#1e1e2f">
               <font>
                  <Font name="Segoe UI Semibold" size="26.0"/>
               </font>
               <effect>
                  <DropShadow color="#00000040" radius="4.0"/>
               </effect>
               <VBox.margin>
                  <Insets top="16.0"/>
               </VBox.margin>
            </Label>

            <Label fx:id="lblStatus" text="Cargando jugadores..." alignment="CENTER" textFill="#3b3b3b">
               <font>
                  <Font name="Segoe UI" size="16.0"/>
               </font>
            </Label>

            <ListView fx:id="listPlayers" prefWidth="320" prefHeight="240"
                      style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e6e6e6);
                             -fx-border-color: #2c3e50;
                             -fx-border-radius: 10;
                             -fx-background-radius: 10;
                             -fx-padding: 5;">
               <VBox.margin>
                  <Insets left="50.0" right="50.0"/>
               </VBox.margin>
               <effect>
                  <DropShadow color="#00000040" radius="8.0"/>
               </effect>
            </ListView>

            <Label text="Haz doble click en un jugador para invitar" alignment="CENTER" textFill="#1e1e2f">
               <font>
                  <Font name="Segoe UI Italic" size="14.0"/>
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="com.clientFX.CtrlConfig"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #e0f7fa, #80deea);">

    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

        <Label text="Connecta 4" style="-fx-font-weight: bold; -fx-text-fill: #004d40;">
            <font><Font size="40"/></font>
        </Label>

        <GridPane hgap="15" vgap="15" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                <ColumnConstraints halignment="LEFT" minWidth="200"/>
            </columnConstraints>

            <Label text="Protocol:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtProtocol" promptText="ws" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Host:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtHost" promptText="localhost" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Port:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPort" promptText="3000" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <Button fx:id="btnConnect" text="Connectar"
                style="-fx-background-color: #26a69a; -fx-text-fill: white; -fx-font-weight: bold; 
                       -fx-background-radius: 12; -fx-padding: 10 25;"/>

        <Label fx:id="lblMessage" text="" style="-fx-font-size: 14px; -fx-text-fill: #d32f2f;"/>

    </VBox>
</AnchorPane>

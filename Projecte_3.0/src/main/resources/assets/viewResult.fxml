<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchor" minHeight="500.0" minWidth="600.0" 
            xmlns="http://javafx.com/javafx/19" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.clientFX.CtrlResult"
            style="-fx-background-color: linear-gradient(to bottom, #f2d16b, #d3a243);">
   <children>
      <VBox alignment="CENTER" spacing="30" 
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
            style="-fx-background-color: rgba(255,255,255,0.3); -fx-background-radius: 20; -fx-padding: 50;">
         <children>
            <Label fx:id="lblResult" text="Resultado" alignment="CENTER" textFill="#1e1e2f">
               <font>
                  <Font name="Segoe UI Black" size="42.0"/>
               </font>
               <effect>
                  <DropShadow color="#00000050" radius="8.0"/>
               </effect>
               <VBox.margin>
                  <Insets bottom="10.0"/>
               </VBox.margin>
            </Label>
            
            <Label fx:id="lblDetails" text="Detalles del resultado" alignment="CENTER" textFill="#2c3e50">
               <font>
                  <Font name="Segoe UI Semibold" size="18.0"/>
               </font>
               <effect>
                  <DropShadow color="#00000030" radius="4.0"/>
               </effect>
               <VBox.margin>
                  <Insets bottom="20.0"/>
               </VBox.margin>
            </Label>
            
            <HBox alignment="CENTER" spacing="30">
               <Button fx:id="btnPlayAgain" text="Jugar otra vez" 
                       prefWidth="140" prefHeight="45"
                       onAction="#handlePlayAgain"
                       style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 20; -fx-border-radius: 20;">
                  <effect>
                     <DropShadow color="#00000040" radius="5.0"/>
                  </effect>
               </Button>
               
               <Button fx:id="btnExit" text="Salir" 
                       prefWidth="140" prefHeight="45"
                       onAction="#handleExit"
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 20; -fx-border-radius: 20;">
                  <effect>
                     <DropShadow color="#00000040" radius="5.0"/>
                  </effect>
               </Button>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>